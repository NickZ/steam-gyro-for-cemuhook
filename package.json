{
	"name": "steam-gyro-for-cemuhook",
	"description": "App to add Steam Controller's motion support to Cemuhook",
	"authors": "FrogTheFrog",
	"version": "1.3.1",
	"main": "./dist/main.bundle.js",
	"author": {
		"name": "FrogTheFrog",
		"url": "https://github.com/FrogTheFrog",
		"email": "warliukz@gmail.com"
	},
	"repository": {
		"url": "https://github.com/FrogTheFrog/steam-gyro-for-cemuhook"
	},
	"build": {
		"appId": "FrogTheFrog.SteamGyroForCemuhook",
		"productName": "steam-gyro-for-cemuhook",
		"compression": "normal",
		"directories": {
			"output": "release"
		},
		"win": {
			"target": [
				"portable"
			],
			"icon": "./assets/icon.ico"
		},
		"linux": {
			"icon": "./assets/icon.png"
		},
		"portable": {
			"artifactName": "${productName}.${ext}"
		},
		"files": [
			"dist/**/*",
			"package.json"
		]
	},
	"scripts": {
		"postinstall": "./node_modules/.bin/electron-rebuild",
		"lint": "./node_modules/.bin/tslint --project .",
		"test": "npm run lint && npm run build:dist",
		"start": "./node_modules/.bin/electron ./dist/main.bundle.js",
		"watch:backend": "webpack --watch --config ./webpack/backend.js",
		"watch:frontend": "webpack --watch --config ./webpack/frontend.js",
		"build:backend": "cross-env NODE_ENV=production webpack --config ./webpack/backend.js",
		"build:frontend": "cross-env NODE_ENV=production webpack --config ./webpack/frontend.js",
		"build:dist": "rimraf dist && npm run build:backend && npm run build:frontend",
		"build:win": "build --win --x64",
		"build:linux": "build --linux --x64"
	},
	"dependencies": {
		"node-controller-api": "git:git@github.com:NickZ/node-controller-api#master"
	},
	"devDependencies": {
		"@angular/animations": "^7.2.4",
		"@angular/cdk": "^7.3.1",
		"@angular/cli": "^7.3.1",
		"@angular/common": "^7.2.4",
		"@angular/compiler": "^7.2.4",
		"@angular/compiler-cli": "^7.2.4",
		"@angular/core": "^7.2.4",
		"@angular/forms": "^7.2.4",
		"@angular/http": "^7.2.4",
		"@angular/material": "^7.3.1",
		"@angular/platform-browser": "^7.2.4",
		"@angular/platform-browser-dynamic": "^7.2.4",
		"@angular/router": "^7.2.4",
		"@mdi/svg": "^3.4.93",
		"@ngtools/webpack": "^7.3.1",
		"@swimlane/ngx-charts": "^10.0.0",
		"@types/crc": "^3.4.0",
		"@types/fs-extra": "^5.0.4",
		"@types/lodash": "^4.14.120",
		"@types/long": "^4.0.0",
		"@types/microtime": "^2.1.0",
		"@types/node": "^10.12.23",
		"@types/node-hid": "^0.7.0",
		"@types/random-js": "^1.0.31",
		"@types/webpack-env": "^1.13.7",
		"ajv": "^6.8.1",
		"autoprefixer": "^9.4.7",
		"core-js": "^2.6.3",
		"crc": "^3.8.0",
		"cross-env": "^5.2.0",
		"css-loader": "^2.1.0",
		"electron": "^4.0.4",
		"electron-builder": "^20.38.5",
		"electron-rebuild": "^1.8.4",
		"file-loader": "^3.0.1",
		"fs-extra": "^7.0.1",
		"hack-font": "^3.3.0",
		"hammerjs": "^2.0.8",
		"html-webpack-plugin": "^3.2.0",
		"long": "^4.0.0",
		"microtime": "^3.0.0",
		"node-hid": "^0.7.6",
		"node-sass": "^4.11.0",
		"postcss-loader": "^3.0.0",
		"random-js": "^1.0.8",
		"random-mac": "0.0.5",
		"raw-loader": "^1.0.0",
		"rimraf": "^2.6.3",
		"rxjs": "^6.5.3",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"to-string-loader": "^1.1.5",
		"ts-loader": "^5.3.3",
		"tslint": "^5.12.1",
		"typescript": "~3.2.4",
		"usb-detection": "^4.1.0",
		"val-loader": "^1.1.1",
		"webpack": "^4.29.2",
		"webpack-cli": "^3.2.3",
		"webpack-merge": "^4.2.1",
		"webpack-node-externals": "^1.7.2",
		"winston": "^3.2.1",
		"zone.js": "^0.8.29"
	}
}
